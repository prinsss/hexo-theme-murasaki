header {
  padding: 2em 0;
  border-bottom: 1px solid $color-boder;
}

footer {
  text-align: center;
  padding: 1.5em 0;
}

.container {
  margin: 0 auto;
  max-width: $content-width-desktop;
}

main {
  line-height: 1.7;

  .container {
    padding: 1.5em 0;
  }
}

.site-name {
  .logo {
    font-weight: 600;
    color: $color-text;
    font-size: 2em;
    font-family: $font-family-headings;
  }

  .description {
    margin: .5em 0 0;
    font-size: 1em;
    color: $color-text-secondary;
    display: block;
  }

  a {
    color: $color-text;
  }

  a:hover {
    text-decoration: none;
  }
}
